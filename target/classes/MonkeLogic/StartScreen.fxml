<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="MonkeLogic.methods.Login" alignment="CENTER" hgap="10"
          vgap="10">
    <padding>
        <Insets top="25" bottom="25" right="25" left="25"/>
    </padding>
    <children>
        <Text fx:id="scenetitle" text="Welcome" layoutX="20" layoutY="30" stroke="black">
            <font>
                <Font name="Comic Sans" size="32.0"/>
            </font>
        </Text>
    </children>

    <Label fx:id="userNameLabel" text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameInpt" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label fx:id="passwordLabel" text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordInpt" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button fx:id="login" text="Login" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

</GridPane>
